<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context=".Hostelite_review_page">
    //topBar

    <LinearLayout

        android:id="@+id/topBar_landingP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp"
        android:weightSum="3">


        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/imgBack_height"
            android:layout_gravity="center"
            android:layout_weight=".3"
            android:id="@+id/dp_review"
            android:background="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2.4"
            android:fontFamily="@string/topBar_font"
            android:gravity="center_horizontal"
            android:text="Reviews"
            android:textSize="@dimen/topBar_fontSize" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_reviews"
            android:layout_width="match_parent"

            android:layout_height="wrap_content">


        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

</LinearLayout>