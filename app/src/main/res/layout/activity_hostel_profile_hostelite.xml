<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F3F3F3"
    android:layout_height="match_parent"
    tools:context=".HostelProfileHostelite">


    //topBar
    <LinearLayout

        android:id="@+id/topBar_hostProfile_hostelite"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp"
        android:weightSum="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:layout_weight=".3"
            android:layout_width="0dp"
            android:layout_height="@dimen/imgBack_height"
            android:layout_gravity="center"
            android:background="@drawable/ic_back"/>

        <TextView
            android:layout_weight="2.4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/topBar_fontSize"
            android:gravity="center_horizontal"
            android:fontFamily="@string/topBar_font"
            android:text="Hostel Name"
            />

        <ImageView
            android:layout_weight=".3"
            android:layout_width="0dp"
            android:layout_height="@dimen/imgBack_height"
            android:layout_gravity="center"
            android:background="@drawable/ic_favourite_black"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/topBar_hostProfile_hostelite">

        //1st
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="@dimen/_3sdp"
            app:cardUseCompatPadding="true"
    >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:background="@drawable/img" />
                //firstLine

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/cv_marginLeft"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.5"
                        android:fontFamily="sans-serif-medium"
                        android:text="Hostel Name"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="@dimen/_20sdp" />

                    <ImageView

                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_location" />

                    <TextView
                        android:id="@+id/hostel_distance_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="N miles away"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="@dimen/cv_textSmall_size" />


                </LinearLayout>

                /secondLine

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/cv_marginLeft">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Startin From Rs."
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="@dimen/cv_textSmall_size" />

                    <TextView
                        android:id="@+id/tv_startingPrice_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5000"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="@dimen/cv_textSmall_size" />


                </LinearLayout>


                <RatingBar
                    style="?android:attr/ratingBarStyleIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/cv_marginLeft"
                    android:isIndicator="true"
                    android:max="5"
                    android:rating="3.5"
                    android:scaleX=".6"
                    android:scaleY=".6"
                    android:transformPivotX="0dp"
                    android:transformPivotY="0dp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        /2nd
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            

        </androidx.cardview.widget.CardView>



    </ScrollView>






</androidx.constraintlayout.widget.ConstraintLayout>